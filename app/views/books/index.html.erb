<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Tite</th>
      <th>Titlekana</th>
      <th>Subtitle</th>
      <th>Subtitlekana</th>
      <th>Seriesname</th>
      <th>Seriesnamekana</th>
      <th>Author</th>
      <th>Authorkana</th>
      <th>Publishername</th>
      <th>Size</th>
      <th>Isbn</th>
      <th>Itemcaption</th>
      <th>Salesdate</th>
      <th>Itemurl</th>
      <th>Affiliateurl</th>
      <th>Smallimageurl</th>
      <th>Mediumimageurl</th>
      <th>Largeimageurl</th>
      <th>Purchasedate</th>
      <th>Finishreadingdate</th>
      <th>Evaluation</th>
      <th>Memo</th>
      <th>Category</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.tite %></td>
        <td><%= book.titleKana %></td>
        <td><%= book.subTitle %></td>
        <td><%= book.subTitleKana %></td>
        <td><%= book.seriesName %></td>
        <td><%= book.seriesNameKana %></td>
        <td><%= book.author %></td>
        <td><%= book.authorKana %></td>
        <td><%= book.publisherName %></td>
        <td><%= book.size %></td>
        <td><%= book.isbn %></td>
        <td><%= book.itemCaption %></td>
        <td><%= book.salesDate %></td>
        <td><%= book.itemUrl %></td>
        <td><%= book.affiliateUrl %></td>
        <td><%= book.smallImageUrl %></td>
        <td><%= book.mediumImageUrl %></td>
        <td><%= book.largeImageUrl %></td>
        <td><%= book.purchaseDate %></td>
        <td><%= book.finishReadingDate %></td>
        <td><%= book.evaluation %></td>
        <td><%= book.memo %></td>
        <td><%= book.category %></td>
        <td><%= book.tags %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

