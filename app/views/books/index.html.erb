<p id="notice"><%= notice %></p>

<h1>読書録</h1>

<table class="verticalListTable">
  <thead>
    <tr>
      <th>読了日</th>
      <th>画像</th>
      <th>タイトル</th>
      <th>サブタイトル</th>
      <th>シリーズ</th>
      <th>著者</th>
      <th>出版社</th>
      <th>ISBN</th>
      <th>評価</th>
      <th>カテゴリ</th>
      <th>タグ</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.finishReadingDate %></td>
        <td><%= book.mediumImageUrl %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.subTitle %></td>
        <td><%= book.seriesName %></td>
        <td><%= book.author %></td>
        <td><%= book.publisherName %></td>
        <td><%= book.isbn %></td>
        <td><%= book.evaluation %></td>
        <td><%= book.category %></td>
        <td><%= book.tags %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

